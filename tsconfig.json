{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src/main/**/*.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}